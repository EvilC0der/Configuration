set modelines=0		" CVE-2007-2438
set nocompatible	" Use Vim defaults instead of 100% vi compatibility
set backspace=2		" more powerful backspacing
let skip_defaults_vim=1
set nu!
filetype on
set background=dark
syntax on
set autoindent
set cindent
set tabstop=2
set shiftwidth=2
set showmatch
set nohls
set expandtab
set ai
set number
set hlsearch
set ruler
highlight Comment ctermfg=green
